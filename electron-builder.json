{
	"files": [
		"main.js",
		"preload.js",
		"package.json"
	],
	"extraResources": [
		"LICENSE",
		"build/icon.png",
		"build/tray-icon.png"
	],
	"asarUnpack": [
		"build/"
	],
	"appId": "com.sayedulsayem.whatsapp-linux-desktop",
	"linux": {
		"target": [
			"AppImage",
			"tar.gz",
			"deb",
			"snap",
			"pacman",
			"rpm",
			"flatpak"
		],
		"asar": true,
		"executableName": "whatsapp-linux-desktop",
		"category": "Network;TextTools;Office;GTK;GNOME",
		"desktop": {
			"StartupWMClass": "WhatsApp Desktop",
			"MimeType": "x-scheme-handler/whatsapp-linux-desktop"
		},
		"artifactName": "whatsapp-linux-desktop-${version}-${arch}.${ext}",
		"icon": "build/icon.png"
	},
	"rpm": {
		"fpm": [
			"--rpm-rpmbuild-define=_build_id_links none"
		]
	},
	"snap": {
		"title": "WhatsApp Desktop",
		"base": "core24",
		"category": "Social",
		"confinement": "strict",
		"grade": "stable",
		"summary": "An unofficial WhatsApp Linux Desktop application",
		"plugs": [
			"audio-playback",
			"audio-record",
			"browser-support",
			"desktop",
			"desktop-legacy",
			"gsettings",
			"home",
			"network",
			"opengl",
			"unity7",
			"wayland",
			"x11"
		]
	},
	"generateUpdatesFilesForAllChannels": true
}