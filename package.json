{
  "name": "whatsapp-linux-desktop",
  "productName": "WhatsApp Desktop",
  "version": "1.0.1",
  "description": "An unofficial WhatsApp Linux Desktop application",
  "main": "main.js",
  "homepage": "https://sayedulsayem.com",
  "scripts": {
    "start": "electron .",
    "build-linux": "electron-builder --publish never --linux",
    "build-linux-AppImage": "electron-builder --publish never --linux AppImage",
    "build-linux-tar.gz": "electron-builder --publish never --linux tar.gz",
    "build-linux-deb": "electron-builder --publish never --linux deb",
    "build-linux-pacman": "electron-builder --publish never --linux pacman",
    "build-linux-rpm": "electron-builder --publish never --linux rpm",
    "build-linux-snap": "electron-builder --publish never --linux snap",
    "build-linux-flatpak": "electron-builder --publish never --linux flatpak"
  },
  "repository": "https://github.com/sayedulsayem/whatsapp",
  "keywords": [
    "WhatsApp",
    "whatsapp",
    "meta",
    "linux",
    "chat",
    "social",
    "call"
  ],
  "author": {
    "name": "Sayedul Sayem",
    "email": "sayedulsayem@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^32.0.1",
    "electron-builder": "^25.1.8",
    "electron-notarize": "^1.2.2"
  },
  "dependencies": {
    "electron-context-menu": "^3"
  }
}
